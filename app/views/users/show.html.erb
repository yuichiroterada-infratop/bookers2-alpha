<!--/users/:idの画面-->
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "info", user: @user, book: @book %>
      <%= render "books/newbook", book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
              <%= image_tag book.user.get_profile_image("80x80") %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <% if book.favorited_by?(current_user) %>
            <td>
              <%= link_to book_favorite_path(book, book), method: :delete do %>
                <i class="fas fa-heart" style="color: #ea542e"><%= book.favorites.count %></i>
              <% end %>
            </td>
            <% else %>
            <td>
              <%= link_to book_favorites_path(book.id), method: :post do %>
                <i class="fas fa-heart"><%= book.favorites.count %></i>
              <% end %>
            </td>
            <td>
              コメント数：<%= book.book_comments.count %>
            </td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
